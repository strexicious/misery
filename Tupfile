CXX = g++
CFLAGS += -std=c++17 -Wall -Iheaders/
LIBS = -Llibs/ -lglfw3 -lgdi32 -lopengl32

: foreach source/*.cc |> $(CXX) $(CFLAGS) -c %f -o %o |> build/objects/%B.o
: source/glad.c |> $(CXX) $(CFLAGS) -c %f -o %o |> build/objects/glad.o
: build/objects/*.o |> $(CXX) %f -o %o $(LIBS) |> build/misery.exe
